<%- include('partials/head.ejs') -%>
    <%- include('partials/header.ejs') -%>
    <section class="heading">
        <h1>Vacatures bij onze klanten</h1>
    </section>
    <main>
        <article>
            <section>
                <p>Hoewel de ‘core business’ van Collier Advies HR Consultancy geen Werving & Selectie is hebben wij toch regelmatig vacatures bij onze klanten.</p>
            </section>
        </article>
        <section>
            <% if (!vacatures.some(vacature => vacature.online)) { %>
                <ul style="padding: 0" class="vacancies not-online">
                    <!-- LinkedIn referentie toevoegen -->
                    <li><i class="fa-solid fa-circle-xmark"></i><br><p>Er staan op het moment geen vacatures online</p></li>
                </ul>
            <% } else { %>
                <ul class="vacancies" style="padding: 0">
                    <% vacatures.forEach(vacature => { %>
                        <% if (vacature.online) { %>
                            <li>
                                <a href="/vacatures/<%= vacature.href %>">
                                    <% if (vacature.img) { %>
                                        <img src="/images/<%= vacature.img %>" alt="Logo van <%= vacature.bedrijf %>">
                                    <% } %>
                                    <div>
                                        <h2><%= vacature.positie %> - <%= vacature.bedrijf %></h2>
                                        <h3><%= vacature.dienstverband %></h3>
                                        <h4><%= vacature.uren %> uur</h4>
                                    </div>
                                </a>
                            </li>
                        <% } %>
                    <% }); %>
                </ul>
            <% } %>
        </section>
    </main>
<%- include('partials/footer.ejs') -%>