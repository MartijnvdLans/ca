<%- include('partials/head.ejs') -%>
    <%- include('partials/header.ejs') -%>
    <main class="admin-main">
        <section class="admin-page">
            <nav class="admin-nav">
                <ul>
                    <li><a href="/admin-ca/medewerkers">Bewerk Medewerkers</a></li>
                    <li><a href="/admin-ca/vacatures">Bewerk vacatures</a></li>
                    <li><a href="/admin-ca/cursus" class="active-admin">Bekijk deelnames</a></li>
                </ul>
                <form action="/logout" method="get">
                    <button class="logout"><i class="fa-solid fa-right-from-bracket"></i> Uitloggen</button>
                </form>
            </nav>
            <section>
                <table class="admin-table">
                    <tr>
                        <td>Naam</td>
                        <td>Functie</td>
                        <td>Bedrijfsnaam</td>
                        <td>Factuuradres</td>
                        <td>Email</td>
                        <td>Tel</td>
                        <td>Wensen</td>
                        <td>Factuur verstuurd</td>
                        <td>Factuur betaald</td>
                        <td>Factuur bevestigd</td>
                        <td>bewerk</td>
                        <td>verwijder</td>
                    </tr>
                    <% deelnemers.forEach(deelnemer => { %>
                        <tr>
                            <td style="text-align: center;"><%= deelnemer.naam %></td>
                            <td style="text-align: center;"><%= deelnemer.functie %></td>
                            <td style="text-align: center;"><%= deelnemer.bedrijfsnaam %></td>
                            <td style="text-align: center;"><%= deelnemer.straatnaam %> <%= deelnemer.huisnummer %>,<br><%= deelnemer.postcode %> <%= deelnemer.woonplaats %></td>
                            <td style="text-align: center;"><%= deelnemer.email %></td>
                            <td style="text-align: center;"><%= deelnemer.tel %></td>
                            <td style="text-align: left;"><%= deelnemer.wensen %></td>
                            <td style="text-align: center;"><% if (deelnemer.optionOne) { %>✅<% } else { %>❌<% } %></td>
                            <td style="text-align: center;"><% if (deelnemer.optionTwo) { %>✅<% } else { %>❌<% } %></td>
                            <td style="text-align: center;"><% if (deelnemer.optionThree) { %>✅<% } else { %>❌<% } %></td>
                            <td><a href="/admin-ca/cursus/edit/<%= deelnemer._id %>"><i class="fa fa-pencil"></i></a></td>
                            <td><a href="/delete-deelnemer/<%= deelnemer._id %>"><i class="fa fa-trash-can"></i></a></td>
                        </tr>
                    <% }); %>
                    <tr>
                        <td colspan="12" style="font-size: 25px;"><a href="/admin-ca/cursus/add"><i class="fa fa-plus"></i></a></td>
                        <!-- <td><a href="/admin-ca/cursus/download"><i class="fa-solid fa-download"></i></a></td> -->
                    </tr>
                </table>
            </section>
        </section>
    </main>
    <script>
        document.querySelectorAll('.vac-inh').forEach(el => {
            el.textContent = el.textContent.slice(0, 200) + (el.textContent.length > 100 ? '...' : '');
        });
    </script>
</html>